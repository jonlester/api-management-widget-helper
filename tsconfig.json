//this is not used for building typescript project artifacts
//it is here as a default for bootstrapping ts-node
//with the broadest possible support 
{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
		"downlevelIteration": false,
    "strict": true,
		"skipLibCheck": true,
		"alwaysStrict": true,
		"emitDecoratorMetadata": false,
		"importHelpers": true,
		"newLine": "LF",
		"sourceMap": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "nodenext",
		"module": "esnext",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"resolveJsonModule": true,
		"target": "esnext",
		"lib": [
			"es5",
			"es2015",
			"es6",
			"es7",
			"es2016",
			"es2017",
			"es2018",
			"es2019",
			"es2020",
			"es2021",
			"es2022",
			"esnext",
			"dom",
			"dom.iterable",
			"webworker",
			"webworker.importscripts",
			"scripthost"
		]
	},
	"exclude": ["**/*.ts"]
}